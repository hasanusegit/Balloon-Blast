<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03DFF9"
    android:id="@+id/activity_end"
    tools:context=".EndActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv"
        android:text="Game Over!"
        android:textColor="#F91903"
        android:textSize="75dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/tv"
        android:hint="Best Score:"
        android:textSize="40dp"
        android:textColor="#003DFC"
        android:layout_marginTop="210dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/tv2"
        android:hint="Your Score: "
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#F96403"
        android:layout_marginTop="25dp"
        android:textStyle="italic"
        />


    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Play Again"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#F31E0C"
        android:layout_centerHorizontal="true"
        android:background="#FCF100"
        android:layout_marginTop="520dp"
        android:id="@+id/btn2"/>

</RelativeLayout>